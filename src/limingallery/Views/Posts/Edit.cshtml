@model limingallery.Models.Post

@{
    ViewBag.Title = "Edit Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "Posts", FormMethod.Post))
{
    <form class="container">
        <div class="form-group">
            @Html.LabelFor(p => p.Title)
            @Html.TextBoxFor(p => p.Title, Model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Title)
        </div>
        <div class="form-group">
            @Html.TextBoxFor(p => p.File, new { type = "file", accept = "image/*", @class = "form-control-file" })
            @Html.ValidationMessageFor(p => p.File)
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description)
            @Html.TextAreaFor(p => p.Description, new { @class = "form-control", value = Model.Description })
        </div>
        @Html.HiddenFor(p=>p.Id, Model.Id)

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}

@Html.ValidationSummary()
